<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/styl.css">
    <link rel="stylesheet" href="./css/prihlaseni.css">
    <script src="./js/kosik.js"></script>
    <title>Kosik</title>
</head>

<body  onload="vypisKosik()">
    <!-- header -->
    <header>
        <nav>
            <img id="logo" src="./obrazek/prasatko.png">
            <ul>
                <li><a href="/#domu">Domů</a></li>
                <li><a href="/#produkty">Produkty</a></li>
                <li><a href="/kosik">Košík</a></li>
                <li><a href="/prihlaseni">Přihlášení</a></li>
                
            </ul>
        </nav>

    </header>
    <!-- horni cast, nadpis -->
    <section id="domu">
        <article class="nadpis-article">
            <span id="nadpis">
                <%=titulek%>
            </span>
        </article>
        <article id="nahled">
            <img id="zelenina" src="./obrazek/kosik-chalky.png">
        </article>
    </section>
    <section class="kosikBody">
        <section class="celkovaCena" onload="celkovaCenaKosiku()">
            <p class="cenaText">
             Celková cena = 
            </p>
         </section>
         <!-- produkty -->
         <article class="produkty-kosik">
             <!-- Zde se zobrazí produkty v košíku -->
             
         </article>
    </section>
    

    <button onclick="vytvoritObjednavku()">Vytvořit objednávku</button>
<form id="objednavkaForm" style="display: none;" onsubmit="odeslatObjednavku(event)">
    <label for="jmeno">Jméno:</label>
    <input type="text" id="jmeno" name="jmeno" required>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
    <input type="submit" value="Odeslat objednávku">
</form>

</body>

</html>